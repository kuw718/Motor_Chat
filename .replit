modules = ["web", "ruby-3.2", "nodejs-20", "ruby-3.1"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Rails Server"

[[workflows.workflow]]
name = "Rails Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bin/dev-server"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 40769
externalPort = 3000

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "unset DATABASE_URL && export NODE_OPTIONS='--openssl-legacy-provider' && bundle exec rails db:migrate && bundle exec puma -C config/puma.rb"]
build = ["bash", "-c", "unset DATABASE_URL && export NODE_OPTIONS='--openssl-legacy-provider' && bundle install --without development test && bundle exec rails assets:precompile"]

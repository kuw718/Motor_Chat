          <!-- レイアウト -->
          <style>
          .profile-image {
              width: 100px;
              height: 90px;
              object-fit: cover;
          }

          .image-slide-down {
            opacity: 0;
            animation: slideDown 5s forwards;
          }

          @keyframes slideDown {
            from {
              opacity: 0;
              transform: translateY(-3px);
            }
            to {
              opacity: 1;
              transform: translateY(0);
            }
          }

          .card-body {
              padding: 15px;
          }

          .card-title {
              font-size: 1.2em;
              color: #000000;
          }

          .card-text {
              color: #000000;
          }

          .card-text .badge {
              background-color: #333333;
              color: #ffffff;
              border-radius: 5px;
              padding: 5px 10px;
          }

          .card-text .badge:hover {
              background-color: #cccccc;
              color: #333333;
          }

          a {
              color: #333333;
              text-decoration: none;
          }

          a:hover {
              color: #333333;
          }

          ul {
              list-style: none;
              padding: 0;
              margin: 0;
          }

          .custom-badge {
              background-color: #778899;
              color: black;
          }

          .new-post-button {
            position: fixed;
            bottom: 70px;
            right: 20px;
            z-index: 999;
          }

          .button:hover {
            box-shadow: none;
            opacity: 0.8;
          }
          </style>

          <div class='jscroll-div'>
            <table class='table table-hover table-inverse'>
              <% @post_images.each do |post_image| %>
                <div class="card mb-3">
                  <%= link_to post_image_path(post_image.id) do %>
                    <!-- MiniMagickなし：HTML側でサイズ指定 -->
                    <%= image_tag post_image.resized_image, class: "card-img-top image-slide-down" %>
                  <% end %>

                  <div class="card-body">
                    <h5 class="card-text">
                      <!-- MiniMagickなし：HTML側でサイズ指定 -->
                      <%= image_tag post_image.customer.get_profile_image, class: "rounded image-slide-down profile-image", size: "100x100" %>
                      <span class="customer-name"><%= post_image.customer.name %></span>
                    </h5>
                    <h3 class="card-title"><%= post_image.title %></h3>
                    <p class="card-text"><%= post_image.caption %></p>
                    <p class="card-text"><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
                  </div>
                </div>
              <% end %>
            </table>
            <%= paginate @post_images %>
          </div>

          <script>
          document.addEventListener('turbolinks:load', function() {
            $('.jscroll-div').jscroll({
              autoTrigger: true,
              loadingHtml: '<p>読み込み中...</p>',
              padding: 10,
              nextSelector: '.pagination .next a',
              contentSelector: 'div.jscroll-div',
              callback: function() {
                $('.pagination').remove();
              }
            });
          });
          </script>

          <style>
            .pagination {
              visibility: hidden;
            }
          </style>

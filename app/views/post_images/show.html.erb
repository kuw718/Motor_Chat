<div class="card mb-3">
  <%= link_to post_image_path(@post_image) do %>
    <%= image_tag @post_image.get_image, class: "card-img-top" %>
  <% end %>
  <div class="card-body">
    <p class="card-text">ショップ名：<%= @post_image.title %></p>
    <p class="card-text">説明：<%= @post_image.caption %></p>
    <div class="d-flex align-items-center">
      <%= link_to customer_path(@post_image) do %>
        <%= image_tag @post_image.customer.get_profile_image(100,100), class: "rounded-circle me-2" %>
      <% end %>
      <p class="card-text mb-0"><%= @post_image.customer.name %></p>
    </div>
    <p class="card-text">投稿日時：<%= @post_image.created_at.strftime('%Y/%m/%d') %></p>
    <% if @post_image.customer == current_customer %>
      <%= link_to "削除", post_image_path(@post_image), method: :delete, class: "btn btn-danger btn-sm me-2" %>
    <% end %>
    <p>
      <% if @post_image.favorited_by?(current_customer) %>
        <%= link_to post_image_favorite_path(@post_image), method: :delete, class: "btn btn-primary btn-sm" do %>
          ♥ <%= @post_image.favorites.count %> いいね
        <% end %>
      <% else %>
        <%= link_to post_image_favorite_path(@post_image), method: :post, class: "btn btn-outline-primary btn-sm" do %>
          ♡ <%= @post_image.favorites.count %> いいね
        <% end %>
      <% end %>
    </p>
  </div>
</div>

<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title">コメント件数：<%= @post_image.post_comments.count %></h5>
    <% @post_image.post_comments.each do |post_comment| %>
      <div class="d-flex align-items-center mb-2">
        <%= image_tag post_comment.customer.get_profile_image(100,100), class: "rounded-circle me-2" %>
        <p class="card-text mb-0"><%= post_comment.customer.name %></p>
      </div>
      <p class="card-text"><%= post_comment.created_at.strftime('%Y/%m/%d') %> <%= post_comment.comment %></p>
      <% if post_comment.customer == current_customer %>
        <%= link_to "削除", post_image_post_comment_path(post_comment.post_image, post_comment), method: :delete, class: "btn btn-danger btn-sm" %>
      <% end %>
    <% end %>
  </div>
</div>

    <%= form_with model: [@post_image, @post_comment], class: "mb-0" do |f| %>
      <%= f.text_area :comment, rows: '3', placeholder: "コメントをここに", class: "form-control mb-2" %>
      <%= f.submit "送信する", class: "btn btn-primary btn-sm" %>
    <% end %>
  </div>
</div>

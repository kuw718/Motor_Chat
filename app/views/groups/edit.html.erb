<style>
/* フォーム全体のスタイル */
.group-new-form {
  max-width: 500px;
  margin: 0 auto;
  padding: 30px;
  border: 1px solid #ccc;
  border-radius: 10px;
  background-color: #f9f9f9;
}

/* フォームグループのスタイル */
.group-new-form .form-group {
  margin-bottom: 20px;
}

.group-new-form label {
  font-weight: bold;
}

.group-new-form .form-control {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
}

/* フォーカス時のスタイル */
.group-new-form .form-control:focus {
  outline: none;
  border-color: #5a6066;
  box-shadow: 0 0 0 2px #5a6066;
}

/* ボタンスタイル */
.blue-button {
  background-color: #2f6ba1;
  color: #ffffff; /* テキスト色 */
  border: none;
  border-radius: 5px;
  padding: 10px 20px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.blue-button:hover {
  background-color: #2f6ba1;
}
</style>

<h1>グループ編集</h1>

<%= form_with(model: @group, local: true, html: { class: "group-new-form" }) do |f| %>
  <div class="form-group">
    <%= f.label :name, 'グループ名' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group" style="display: none;">
    <%= f.collection_check_boxes :customer_ids, Customer.all, :id, :customername %>
  </div>
  <div class="form-group">
    <%= f.submit '更新', class: "btn btn-primary blue-button" %>
  </div>
<% end %>


<style>
  
/* ベーススタイル */
body {
    background-color: #1c1c1c;
    color: #e0e0e0;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}

/* ヘッダー */
h1 {
    color: #ff0000;
    text-align: center;
    padding: 20px 0;
    border-bottom: 1px solid #333;
}

/* フォームスタイル */
.group-search-form {
    display: flex;
    justify-content: center;
    padding: 20px 0;
}

.group-search-form-input {
    width: 70%;
    padding: 10px;
    border: 1px solid #444;
    border-radius: 5px 0 0 5px;
    background-color: #333;
    color: #e0e0e0;
}

.group-search-form-submit {
    padding: 10px 20px;
    border: none;
    border-radius: 0 5px 5px 0;
    background-color: #ff0000;
    color: #fff;
    cursor: pointer;
}

.group-search-form-submit:hover {
    background-color: #cc0000;
}

/* リンクスタイル */
.group-new-link, .customer-page-link, .edit-group-link, .delete-group-link {
    display: inline-block;
    padding: 10px 20px;
    margin: 10px 0;
    background-color: #ff0000;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    text-align: center;
}

.group-new-link:hover, .customer-page-link:hover, .edit-group-link:hover, .delete-group-link:hover {
    background-color: #cc0000;
}

/* グループリストスタイル */
.group-list {
    padding: 20px;
}

.group-list-table {
    list-style: none;
    padding: 0;
    margin: 0;
}

.group-list-item {
    padding: 15px;
    margin: 10px 0;
    background-color: #2c2c2c;
    border: 1px solid #444;
    border-radius: 5px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.group-list-item:hover {
    background-color: #333;
}

.group-info {
    flex-grow: 1;
}

.group-name {
    font-size: 1.2em;
    color: #e0e0e0;
}

.group-member-count {
    font-size: 0.9em;
    color: #888;
}

.group-actions {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

/* メッセージ */
.no-groups {
    text-align: center;
    color: #888;
    padding: 20px 0;
}

/* ボタンリンクスタイル */
.edit-group-link, .delete-group-link {
    margin: 5px 0;
}

/* ボタンリンクスタイル */
.edit-group-link, .delete-group-link {
    margin: 5px 0;
}

/* ボタンのホバースタイル */
.edit-group-link:hover, .delete-group-link:hover {
    background-color: #fff;
    color: #ff0000;
}

/* リンクのホバースタイル */
.group-new-link:hover, .customer-page-link:hover, .edit-group-link:hover, .delete-group-link:hover {
    background-color: #fff;
    color: #ff0000;
    text-decoration: none; /* ホバー時の下線を非表示にする */
}

.group-list-item:hover .group-info a {
    color: #ff0000;
}


</style>

<div class="chat-group">
    <h1>スレ一覧</h1>
    <div class="group-search">
        <%= form_with url: groups_path, method: :get, local: true, class: "group-search-form" do |f| %>
            <%= f.text_field :keyword, placeholder: "スレ検索", class: "group-search-form-input" %>
            <%= f.submit '検索', class: "group-search-form-submit" %>
        <% end %>
    </div>
    <div class="group-new">
        <%= link_to 'スレ作成', new_group_path, class: "group-new-link" %>
    </div>

    <% if @other_groups.present? %>
      <div class="group-list">
        <ul class="group-list-table">
          <% @other_groups.each do |group| %>
            <li class="group-list-item">
              <div class="group-info">
              <%= link_to group_path(group) do %>
                <span class="group-name"><%= group.name %></span>
                <span class="group-member-count">(<%= group.customer_ids.count %>)</span>
              <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h2>参加中・参加申請中のスレ</h2>
    <% if @group_joining.empty? %>
        <p class="no-groups"><%= @group_lists_none %></p>
    <% else %>
      <div class="group-list">
        <ul class="group-list-table">
          <% @group_lists.each do |group| %>
          <li class="group-list-item">
              <div class="group-info">
                <%= link_to group_path(group) do %>
                  <span class="group-name"><%= group.name %></span>
                  <span class="group-member-count">(<%= group.customer_ids.count %>)</span>
                <% end %>
              </div>
          </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="customer-page">
        <%= link_to 'マイページへ', current_customer, class: "customer-page-link" %>
    </div>
</div>

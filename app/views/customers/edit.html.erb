<h2>プロフィール編集</h2>
<%= form_with model: @customer, url: customer_path do |f| %>
  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
  <label for="inputEmail">Email</label>
  <%= f.email_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス" %>
  <label for="inputImage">ProfileImage</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
  <%= f.submit "変更を保存" %>
<% end %>

<!-- 退会するボタンを追加 -->
<%= button_to "アカウントを削除する", customer_path(@customer), data: { confirm: "本当にアカウントを削除しますか？" }, method: :delete, class: "btn btn-danger" %>


<!-- レイアウト -->
<style>
.profile-image-profile {
    width: 160px;
    height: 150px;
    object-fit: cover;
}

.new-post-button {
  position: fixed;
  bottom: 70px;
  right: 20px;
  z-index: 999;
}

.button:hover {
  box-shadow   : none;                 /* 影の設定 */
  opacity      : 0.8;                  /* 透明度 */
}


@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-3px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* フォームスタイル */
.post-image-form {
    max-width: 500px;
    margin: 0 auto;
    padding: 30px;
    border: 1px solid #ccc;
    border-radius: 10px;
    background-color: #f9f9f9;
}

.form-group {
    margin-bottom: 20px;
}

label {
    font-weight: bold;
}

.form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

#error_explanation {
    color: red;
    margin-bottom: 20px;
}

#error_explanation ul {
    margin-left: 0;
    padding-left: 20px;
}

#error_explanation li {
    margin-bottom: 5px;
}

/* ファイル選択スタイル */
.file-input-wrapper {
  position: relative;
  overflow: hidden;
  display: inline-block;
  width: 100%;
}

.file-input-wrapper input[type=file] {
  font-size: 100px;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
  cursor: pointer;
}

.file-input-wrapper .file-input-label {
  display: block;
  padding: 10px 15px;
  background-color: #778899;
  color: #fff;
  border-radius: 5px;
  text-align: center;
  cursor: pointer;
}

.file-input-wrapper .file-input-label:hover {
  background-color: #0056b3;
}

/* 保存ボタンスタイル */
.blue-button {
  background-color: #2f6ba1;
  color: #ffffff; /* テキスト色 */
  border: none;
  border-radius: 5px;
  padding: 10px 20px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.blue-button:hover {
  background-color: #2f6ba1;
}

.form-control:focus {
  outline: none;
  border-color: #5a6066;
  box-shadow: 0 0 0 2px #5a6066;
}

/* フォームとボタンのホバー時のスタイル */
.file-input-wrapper .file-input-label:hover,
.profile-edit-form .form-control:hover {
  background-color: white; /* ホバー時の背景色をグレーに変更 */
}
</style>

<h2>プロフィール編集</h2>
<%= form_with model: @customer, url: customer_path, html: { class: "profile-edit-form" } do |f| %>
  <div class="form-group">
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, autofocus: true, id: "inputName", placeholder: "名前", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email, "Email" %>
    <%= f.email_field :email, autofocus: true, id: "inputEmail", placeholder: "メールアドレス", class: "form-control" %>
  </div>
<div class="form-group">
  <%= f.label :profile_image, "ProfileImage" %>
  <div class="file-input-wrapper">
    <span class="file-input-label profile-image-button">ProfileImageを選択</span>
    <%= f.file_field :profile_image, accept: "image/*", class: "form-control" %>
  </div>
</div>
  <div class="form-group">
    <%= f.submit "変更を保存", class: "btn btn-primary blue-button" %>
  </div>
<% end %>

</br></br></br>

<h2>アカウントの削除</h2>
<%= button_to "アカウントを削除する", customer_path(@customer), data: { confirm: "本当にアカウントを削除しますか？" }, method: :delete, class: "btn btn-danger" %>

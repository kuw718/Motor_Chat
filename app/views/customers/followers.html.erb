<style>
  .small-btn {
  padding: 2px 8px;
  font-size: 12px;
  }
  .custom-btn-danger {
  background-color: #b30000; /* 濃い赤 */
  border-color: #b30000;
  color: white;
  }
.custom-btn-grey {
  background-color: #6c757d; /* グレー */
  border-color: #6c757d;
  color: white;
  }
</style>

<h2>Followers</h2>
<table class='table'>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @customer.each do |customer| %>
      <tr>
        <td>
          <%= link_to customer_path(customer) do %>
            <%= image_tag customer.get_profile_image(50,50) %>
          <% end %>
        </td>
        <td><%= customer.name %>
        <% if current_customer != customer %>
        <td>
        <% if current_customer.following?(customer) %>
          <%= link_to "解除", customer_relationships_path(customer), method: :delete, class: "btn custom-btn-danger small-btn" %>
        <% else %>
          <%= link_to "追加", customer_relationships_path(customer), method: :post, class: "btn custom-btn-grey small-btn" %>
        <% end %>
        </td>
        <% else %>
        <td></td>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table> 